modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies and Run Judo Article Generator"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "judo_article"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "preview_judo_article"

[[workflows.workflow]]
name = "Install Dependencies and Run Judo Article Generator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install selenium selenium-wire pandas pillow spacy nltk rdflib pygithub webdriver-manager oauth2client gspread && python -m spacy download en_core_web_sm && python judo_article_generator.py"

[[workflows.workflow]]
name = "judo_article"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install openpyxl pandas selenium nltk spacy rdflib webdriver-manager pillow && python -m spacy download en_core_web_sm && python judo_article_generator.py"

[[workflows.workflow]]
name = "preview_judo_article"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "grip judo_clubs_san_jose.md 0.0.0.0:5000 --title \"Judo Clubs in San Jose\" -b"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "pip install selenium selenium-wire pandas pillow spacy nltk rdflib pygithub webdriver-manager oauth2client gspread && python -m spacy download en_core_web_sm && python judo_article_generator.py"]

[[ports]]
localPort = 5000
externalPort = 80
